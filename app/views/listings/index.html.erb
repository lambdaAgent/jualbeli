<div class="jumbotron">
  <h1>Handcrafted items from <br> around the world</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p>Sold by <strong class="soldByUser"><%= "#{listing.user.name}" %></strong></p>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
<hr/>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path , class:"btn btn-primary", style:"color:white;", data: {no_turbolink: true}, style:"color:white;" %>
<% end %>
